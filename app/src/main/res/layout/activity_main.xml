<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorDarkGrey"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:paddingTop="15pt"
        tools:context=".MainActivity">

    <TextView
            android:layout_height="0dp"
            android:id="@+id/tvMain"
            android:text="@string/text_view"
            android:textSize="20pt"
            android:gravity="center|end"
            android:background="@color/colorTextViewBackground"
            android:layout_width="match_parent"
            android:textColor="@color/colorButton"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"
            android:layout_weight="1"/>
    <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginEnd="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnClear"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="allClear"
                    android:text="@string/clear_button"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/pos_neg"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnPosNeg"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/percent"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnPercent"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnPercent"/>
            <Button
                    android:text="@string/div"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnDivide"
                    android:layout_weight="1"
                    android:background="@color/colorAppleOrange"
                    android:textColor="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnOpEvent"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn7"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn8"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn9"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnMultiply"
                    android:layout_weight="1"
                    android:background="@color/colorAppleOrange"
                    android:textColor="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnOpEvent"
                    android:text="@string/mult"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn4"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_5"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:text="@string/sub"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnSubtract"
                    android:layout_weight="1"
                    android:background="@color/colorAppleOrange"
                    android:textColor="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnOpEvent"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:layout_marginEnd="1pt"
                    android:text="@string/btn_3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:width="30pt"
                    android:background="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnClickEvent"/>
            <Button
                    android:text="@string/add"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:id="@+id/btnAdd"
                    android:layout_weight="1"
                    android:background="@color/colorAppleOrange"
                    android:textColor="@color/colorButton"
                    android:textSize="19sp"
                    android:onClick="btnOpEvent"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginEnd="1pt"
                android:text="@string/btn_0"
                android:layout_width="73pt"
                android:layout_height="30pt"
                android:id="@+id/btn0"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:textSize="19sp"
                android:onClick="btnClickEvent"/>
        <Button
                android:layout_marginEnd="1pt"
                android:text="@string/dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:id="@+id/btnDot"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:textSize="19sp"
                android:onClick="btnClickEvent"/>
        <Button
                android:text="@string/equals"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:id="@+id/btnEquals"
                android:layout_weight="1"
                android:background="@color/colorAppleOrange"
                android:textColor="@color/colorButton"
                android:textSize="19sp"
                android:onClick="btnEqualEvent"/>
    </LinearLayout>
</LinearLayout>