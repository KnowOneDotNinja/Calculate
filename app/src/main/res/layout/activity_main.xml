<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="10pt"
        android:background="@color/colorDarkGrey">

    <TextView
            android:layout_height="30pt" android:id="@+id/tvMain" android:text="0" android:textSize="20pt"
            android:gravity="right" android:background="@color/colorTextViewBackground"
            android:layout_width="match_parent" android:textColor="@color/colorButton"/>
    <TableLayout
            android:layout_height="wrap_content" android:layout_width="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button7" android:background="@color/colorButton"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button6" android:background="@color/colorButton"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button5" android:background="@color/colorButton"/>
            <Button
                    android:text="รท"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button4"
                    android:background="@color/colorAppleOrange" android:textColor="@color/colorButton"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button11" android:background="@color/colorButton"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button10"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button9" android:background="@color/colorButton"/>
            <Button
                    android:text="X"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button8"
                    android:background="@color/colorAppleOrange" android:textColor="@color/colorButton"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button15"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button14"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button13"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button12"
                    android:background="@color/colorAppleOrange" android:textColor="@color/colorButton"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button19"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button18"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button17" android:width="30pt"
                    android:background="@color/colorButton"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button16"
                    android:background="@color/colorAppleOrange" android:textColor="@color/colorButton"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/button3" android:layout_weight="1"
                android:background="@color/colorButton"/>
        <Button
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button2" android:layout_weight="1"
                android:background="@color/colorButton"/>
        <Button
                android:text="="
                android:layout_height="30pt" android:id="@+id/button" android:layout_weight="1"
                android:layout_width="30pt" android:background="@color/colorAppleOrange"
                android:textColor="@color/colorButton"/>
    </LinearLayout>
</LinearLayout>